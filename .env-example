# Server port for the auth service
# Required field. Example: 8080 for local development
ISTOK_AUTH_SERVER_PORT=8080

# Logging level (DEBUG, INFO, WARN, ERROR)
# Optional field. Default: INFO
ISTOK_AUTH_LOG_LVL="INFO"

# Secret key for signing tokens (e.g., JWT)
# Required field.
ISTOK_AUTH_TOKEN_SECRET=your_secret_here

# Refresh token time-to-live (format: Go duration, e.g., 5m, 1h, 24h)
# Example: 168h for 7 days
# Optional field. Default: 1h
ISTOK_AUTH_TOKEN_REFRESH_TTL="1h"

# Access token time-to-live (format: Go duration, e.g., 15m, 1h)
# Example: 15m for 15 minutes
# Optional field. Default: 5m
ISTOK_AUTH_TOKEN_ACCESS_TTL="5m"

# PostgreSQL database host
# Required field. Example: localhost for local development or IP/domain for production
ISTOK_AUTH_DB_HOST=your_postgres_host_here

# PostgreSQL database port
# Required field. Default: 5432 for PostgreSQL
ISTOK_AUTH_DB_PORT=5432

# Database name
# Required field. Example: name of your database
ISTOK_AUTH_DB_NAME="db"

# Maximum number of database connections
# Optional field. Default: 20
ISTOK_AUTH_DB_MAX_CONN=20

# Minimum number of database connections
# Optional field. Default: 5
ISTOK_AUTH_DB_MIN_CONN=5

# Maximum lifetime of database connections (format: Go duration, e.g., 1h, 30m)
# Optional field. Default: 1h
ISTOK_AUTH_DB_CONN_LIFETIME="1h"

# Database user
# Required field. Replace with actual database user
ISTOK_AUTH_DB_USER=your_db_user_here

# Database password
# Required field. Replace with actual database password
ISTOK_AUTH_DB_PASSWORD=your_db_pass_here